{
  "name": "js-tdd-kit",
  "version": "1.0.0",
  "description": "ES6 TDD starter kit with Webpack, Babel, ESLint, Testem, Tape, jsdom and Istanbul",
  "main": "index.js",
  "scripts": {
    "testBuildBrowser": "node_modules/.bin/webpack --mode development --config webpack/test.browser",
    "testBuildNode": "node_modules/.bin/webpack --mode development --config webpack/test.node",
    "testNodeBundle": "npm run testBuildNode && node_modules/.bin/tape dist/jsdom.environment.js dist/app.bundle.js | node_modules/.bin/tap-spec",
    "testCoverage": "NODE_ENV=development node_modules/.bin/tape --require @babel/register test/jsdom.environment.js test/unit/{,**/}/*.test.js | node_modules/.bin/tap-spec",
    "test": "NODE_ENV=development node_modules/.bin/tape --require esm test/jsdom.environment.js test/unit/{,**/}/*.test.js | node_modules/.bin/tap-spec",
    "testStart": "node_modules/.bin/webpack-dev-server --mode development --config webpack/test.browser --open",
    "testem": "node_modules/.bin/testem -f testem.node.json",
    "debug": "NODE_ENV=debug node --nolazy --inspect-brk=5858 node_modules/.bin/tape --require esm test/jsdom.environment.js test/unit/{,**/}/*.test.js",
    "devBuild": "node_modules/.bin/webpack --mode development --config webpack/dev",
    "devWatch": "npm run devBuild -- --watch",
    "devStart": "node_modules/.bin/webpack-dev-server --mode development --config webpack/dev --open",
    "prodBuild": "node_modules/.bin/webpack --mode production --config webpack/prod",
    "lint": "node_modules/.bin/eslint \"*/**/*.js\"",
    "lintFix": "node_modules/.bin/eslint \"*/**/*.js\" --fix",
    "coverage": "node_modules/nyc/bin/nyc.js npm run testCoverage",
    "coverReport": "npm run coverage && node_modules/nyc/bin/nyc.js report --reporter=html && ./bin/opn-cli coverage/index.html -- chrome"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lfurzewaddock/js-tdd-kit.git"
  },
  "keywords": [
    "ES6",
    "TDD",
    "JavaScript",
    "Testem",
    "Tape",
    "jsdom ",
    "Webpack",
    "Babel",
    "Istanbul",
    "ESLint"
  ],
  "author": "Leo Furze-Waddock <leo@furze-waddock.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lfurzewaddock/js-tdd-kit/issues"
  },
  "homepage": "https://github.com/lfurzewaddock/js-tdd-kit#readme",
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-transform-modules-umd": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/register": "^7.8.6",
    "babel-loader": "^8.0.6",
    "babel-plugin-add-module-exports": "^1.0.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "esm": "^3.2.25",
    "html-webpack-plugin": "^3.2.0",
    "jsdom": "^15.2.1",
    "minimist": "^1.2.5",
    "nyc": "^14.1.1",
    "opn": "^5.5.0",
    "prettier": "^1.19.1",
    "tap-spec": "^5.0.0",
    "tape": "^4.13.2",
    "testem": "^3.9.0",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  }
}
